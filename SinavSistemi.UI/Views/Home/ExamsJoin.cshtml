<input type="text" id="basarili" value='@TempData["BASARILI"]' style="display:none;" />
<input type="text" id="hata" value='@TempData["HATA"]' style="display:none;" />
@section Scripts{
    <script src="~/js/form-validation.js"></script>
    <script>$(function () {
            $("#RSSSelect").change(function () {
                var id = $("#RSSSelect").val();
                $.ajax({
                    url: '/Home/GetRSSText',
                    data: { p: id },
                    type: "POST",
                    dataType: "Json",
                    success: function (data) {
                        $("#RSSArea").text(data.description);
                    }
                });
            });
        });</script>
    <script>var basarili = $("#basarili").val();
        var hata = $("#hata").val();

        if (hata == "Kutucuklar boş olamaz!") {
            Swal.fire({
                title: 'Hata!',
                text: 'Lütfen tüm kutucukları doldurarak tekrar deneyiniz!',
                icon: 'error',
                confirmButtonText: 'Kapat'
            })
        }
        if (hata == "Kayıt yapılırken bir sorun oluştu!") {
            Swal.fire({
                title: 'Hata!',
                text: 'Kayıt olurken bir hata oluştu, lütfen tekrar deneyiniz!',
                icon: 'error',
                confirmButtonText: 'Kapat'
            })
        }
        if (hata == "Kullanıcı daha önce kayıt olmuş!") {
            Swal.fire({
                title: 'Hata!',
                text: 'Bu bilgiler ile kullanıcı mevcut!',
                icon: 'error',
                confirmButtonText: 'Kapat'
            })
        }</script>
